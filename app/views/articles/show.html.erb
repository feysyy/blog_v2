<p> <%= @article.id %> </p>

<div>
  <h1> Name: <%= @article.name %> </h1>
  <p> Text: <%= @article.body %> </p>
</div>
<br>
<p> <%= link_to "Home", articles_path %> </p>
<p> <%= link_to "Edit", edit_article_path %> </p>
<p> 
  <%= link_to "Delete this article", article_path, data: {
    turbo_method: :delete,
    turbo_confirm: "Are you sure?"
  } %> 
</p>
<%= link_to "Add comment", new_article_comment_path(@article.id) %>
<div>
  <% @article_comments.each do |c| %>
    <div> <%= c.id %></div>
    <div><%= c.body %></div>
    <div>
      <%= link_to 'Edit Comment', edit_article_comment_path(@article.id, c.id) %>
      <%= link_to 'Delete Comment', article_comment_path(@article.id, c.id), data: {turbo_method: :delete, turbo_confirm: "Continue to delete" } %>
    </div>
  <% end %>
</div>